<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" description="JSEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string"/>

        <field name="state"
               type="status"
               label="COM_JED_GENERAL_FILTER_FIELD_STATE_LABEL"
               description="COM_JED_GENERAL_FILTER_FIELD_STATE_LABEL_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_JED_GENERAL_FILTER_FULL_ORDERING_LABEL"
               description="COM_JED_GENERAL_FILTER_FULL_ORDERING_LABEL_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">JGRID_HEADING_ID_ASC</option>
            <option value="a.`id` DESC">JGRID_HEADING_ID_DESC</option>
            <option value="a.`title` ASC">COM_JED_GENERAL_LIST_SORT_TITLES_ASC</option>
            <option value="a.`title` DESC">COM_JED_GENERAL_FILTER_SORT_TITLE_DESC</option>
            <option value="a.`subject` ASC">COM_JED_GENERAL_FILTER_SORT_SUBJECT_ASC</option>
            <option value="a.`subject` DESC">COM_JED_GENERAL_FILTER_SORT_SUBJECT_DESC</option>
            <option value="a.`email_type` ASC">COM_JED_EMAILTEMPLATES_FILTER_SORT_EMAIL_TYPE_ASC</option>
            <option value="a.`email_type` DESC">COM_JED_GENERAL_FILTER_SORT_EMAIL_TYPE_DESC</option>
            <option value="a.`created_by` ASC">COM_JED_GENERAL_FILTER_SORT_CREATED_BY_ASC</option>
            <option value="a.`created_by` DESC">COM_JED_GENERAL_FILTER_SORT_CREATED_BY_DESC</option>
            <option value="a.`modified_by` ASC">COM_JED_GENERAL_LIST_SORT_MODIFIED_BY_ASC</option>
            <option value="a.`modified_by` DESC">COM_JED_GENERAL_LIST_SORT_MODIFIED_BY_DESC</option>
            <option value="a.`created` ASC">COM_JED_GENERAL_FILTER_SORT_CREATED_ON_ASC</option>
            <option value="a.`created` DESC">COM_JED_GENERAL_FILTER_SORT_CREATED_ON_DESC</option>
            <option value="a.`modified` ASC">COM_JED_GENERAL_LIST_SORT_MODIFIED_ON_ASC</option>
            <option value="a.`modified` DESC">COM_JED_GENERAL_LIST_SORT_MODIFIED_ON_DESC</option>
            <option value="a.`state` ASC">COM_JED_GENERAL_FILTER_SORT_STATE_ASC</option>
            <option value="a.`state` DESC">COM_JED_GENERAL_FILTER_SORT_STATE_DESC</option>

        </field>

        <field name="limit"
               type="limitbox"
               label="COM_JED_GENERAL_FILTER_LIMIT_LABEL"
               description="COM_JED_GENERAL_FILTER_LIMIT_LABEL_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>