<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Jed\Component\Jed\Administrator\Field">
    <fieldset>
        <field
                name="id"
                type="hidden"
                readonly="true"
                class="readonly"
                default="0"
                description="JGLOBAL_FIELD_ID_DESC"/>
        <field
                name="title"
                filter="safehtml"
                type="text"
                label="COM_JED_EMAILTEMPLATES_FIELD_TITLE_LABEL"
                description="COM_JED_EMAILTEMPLATES_FIELD_TITLE_DESCR"
                hint="COM_JED_EMAILTEMPLATES_FIELD_TITLE_LABEL"
                default=""
                size="40"
                required="true"
                maxlength="255"/>
        <field
                name="subject"
                filter="safehtml"
                type="text"
                label="COM_JED_EMAILTEMPLATES_FIELD_SUBJECT_LABEL"
                description="COM_JED_EMAILTEMPLATES_FIELD_SUBJECT_DESCR"
                hint="COM_JED_EMAILTEMPLATES_FIELD_SUBJECT_LABEL"/>
        <field
                name="template"
                editor="jce|codemirror|none"
                buttons="false"
                filter="JComponentHelper::filterText"
                type="editor"
                label="COM_JED_EMAILTEMPLATES_FIELD_TEMPLATE_LABEL"
                description="COM_JED_EMAILTEMPLATES_FIELD_TEMPLATE_DESCR"
                hint="COM_JED_EMAILTEMPLATES_FIELD_TEMPLATE_LABEL"/>
        <field
                name="email_type"
                default="1"
                type="list"
                label="COM_JED_EMAILTEMPLATES_FIELD_MAIL_TYPE_LABEL"
                description="COM_JED_EMAILTEMPLATES_FIELD_EMAIL_TYPE_DESCR"
                hint="COM_JED_EMAILTEMPLATES_FIELD_MAIL_TYPE_LABEL">
            <option value="1">COM_JED_EMAILTEMPLATES_FIELD_EMAIL_TYPE_LABEL_OPTION_1</option>
            <option value="2">COM_JED_EMAILTEMPLATES_FIELD_EMAIL_TYPE_LABEL_OPTION_2</option>
            <option value="3">COM_JED_EMAILTEMPLATES_FIELD_EMAIL_TYPE_LABEL_OPTION_3</option>
            <option value="4">COM_JED_EMAILTEMPLATES_FIELD_EMAIL_TYPE_LABEL_OPTION_4</option>
        </field>
        <field
                name="created_by"
                type="createdby"
                default="0"
                label="JGLOBAL_CREATED_BY"
                description="COM_JED_EMAILTEMPLATES_FIELD_CREATED_ON_DESCR_BY"
                hint="JGLOBAL_CREATED_BY"/>
        <field
                name="modified_by"
                type="modifiedby"
                default="0"
                label="JGLOBAL_MODIFIED_BY"
                description="COM_JED_EMAILTEMPLATES_FIELD_MODIFIED_DESCR_BY"
                hint="JGLOBAL_MODIFIED_BY"/>
        <field
                name="created"
                default="0000-00-00"
                type="timecreated"
                label="JGLOBAL_CREATED"
                description="COM_JED_EMAILTEMPLATES_FIELD_CREATED_ON_DESCR"
                hint="JGLOBAL_CREATED"/>
        <field
                name="modified"
                default="0000-00-00"
                type="timeupdated"
                label="JGLOBAL_MODIFIED"
                description="COM_JED_EMAILTEMPLATES_FIELD_MODIFIED_DESCR"
                hint="JGLOBAL_MODIFIED"/>
        <field
                name="state"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                class="inputbox"
                size="1"
                default="0">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field
                name="version_note"
                type="text"
                label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
                description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
                class="inputbox"
                size="45"
                labelclass="control-label"/>
    </fieldset>
</form>
